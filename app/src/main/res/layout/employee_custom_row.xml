<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:baselineAligned="false">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        tools:ignore="InefficientWeight,UselessParent">

        <TextView
            android:id="@+id/employeeNameText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="@string/textview2"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/employeeAgeText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/employeeNameText"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="TextView3"
            tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />

        <TextView
            android:id="@+id/employeeSalary"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/employeeNameText"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="TextView3"
            tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />


    </LinearLayout>

</LinearLayout>