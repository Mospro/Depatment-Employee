<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="waled.department_employeelistview.HomeMainActivity">

    <Button
        android:id="@+id/goToDep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="GoToEmployee"
        android:text="Go To Employee"
        tools:ignore="HardcodedText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/goToEmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="GoToDepartment"
        android:text="Go To Department"
        tools:ignore="HardcodedText"
        android:layout_marginBottom="76dp"
        android:layout_above="@+id/goToDep"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
